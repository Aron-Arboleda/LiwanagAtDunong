{
  "compilerOptions": {
    "baseUrl": ".", // Sets the root directory for the paths
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@images/*": ["src/assets/images/*"],
      "@controllers/*": ["src/controllers/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  },
  "include": ["src/**/*"] // Ensures it includes your source files
}
